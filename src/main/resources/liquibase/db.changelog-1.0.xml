<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0" author="vasiliy.malyshev">
        <sql>
            create table tasks
            (
                id            bigserial
                    primary key,
                description   varchar(255),
                status        varchar(255),
                title         varchar(255),
                created       timestamp,
                complete_date timestamp
            );

        </sql>
    </changeSet>

    <changeSet id="1.0.1" author="vasiliy.malyshev">
        <sql>
            create table roles
            (
                id      bigserial
                    primary key,
                name    varchar(255),
                created timestamp,
                updated timestamp
            );
        </sql>
    </changeSet>

    <changeSet id="1.0.2" author="vasiliy.malyshev">
      <sql>
          create table users
          (
              id       bigserial
                  primary key,
              created  timestamp,
              password varchar(255),
              status   varchar(255),
              updated  timestamp,
              username varchar(255),
              user_id  bigint
                  constraint fkrc9yp3qrdolf7b8p4j3wgr95g
                      references tasks
          );

      </sql>
    </changeSet>
    
    <changeSet id="1.0.3" author="vasiliy.malyshev">
      <sql>
          create table user_roles
          (
              user_id bigint not null
                  constraint fkhfh9dx7w3ubf1co1vdev94g3f
                      references users,
              role_id bigint not null
                  constraint fkh8ciramu9cc9q3qcqiv4ue8a6
                      references roles
          );
      </sql>
    </changeSet>

    <changeSet id="1.0.4" author="vasiliy.malyshev">
        <sql>
            create table user_tasks
            (
                task_id bigint not null
                    constraint fkd365e5kqm9ekl0dhslnnck8f7
                        references tasks,
                user_id bigint not null
                    constraint fksrpyfa9asu2ymkcqr7jol85o2
                        references users
            );
        </sql>
    </changeSet>

    <changeSet id="1.0.5" author="vasiliy.malyshev">
        <insert tableName="roles">
            <column name="name" value="ROLE_USER"/>
        </insert>

        <insert tableName="roles">
            <column name="name" value="ROLE_ADMIN"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.6" author="vasiliy.malyshev">
       <insert tableName="users">
           <column name="username" value="test"/>
           <column name="password" value="$2a$10$DPoEf8N0b5cbAPj4gwjE.ekSorqZ3nVHRtrlkAExVTtG4X21XUVXS"/>
           <column name="status" value="ACTIVE"/>
       </insert>
    </changeSet>

    <changeSet id="1.0.7" author="vasiliy.malyshev">
        <insert tableName="user_roles">
            <column name="user_id" value="1"/>
            <column name="role_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.8" author="vasiliy.malyshev">
        <insert tableName="user_roles">
            <column name="user_id" value="1"/>
            <column name="role_id" value="2"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.9" author="vasiliy.malyshev">
        <insert tableName="tasks">
            <column name="title" value="title"/>
            <column name="description" value="description"/>
            <column name="status" value="RENDERING"/>
            <column name="complete_date" valueDate="CURRENT_TIMESTAMP"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.10" author="vasiliy.malyshev">
        <insert tableName="user_tasks">
            <column name="user_id" value="1"/>
            <column name="task_id" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.11" author="vasiliy.malyshev">
        <sql>
            create table status_history
            (
                id      bigserial
                    primary key,
                created timestamp,
                status  varchar(255),
                task_id bigint
                    constraint fk4c0pmi3xade34krddun5xv3li
                        references tasks
            );
        </sql>
    </changeSet>
</databaseChangeLog>